{
  "document": {
    "document_id": "patchboard-atlas.gui-scaffold",
    "version": "0.1",
    "type": "implementation-target",
    "purpose": "Defines the initial Tkinter GUI scaffolding for Patchboard Atlas. This document specifies window structure, panes, and major widgets only. No application logic, routing logic, or interaction semantics are defined here.",
    "status": "draft",
    "notes": "This scaffold must be compatible with lionscliapp lifecycle constraints and tkintertester entry/exit requirements."
  },
  "content": {
    "application-shell": {
      "toolkit": "tkinter",
      "root-window": {
        "title": "Patchboard Atlas",
        "resizable": true
      },
      "theme": {
        "mode": "dark",
        "description": "Default dark-mode theme. Widgets should use dark backgrounds with light foreground text unless explicitly overridden."
      }
    },
    "layout": {
      "type": "vertical-stack",
      "regions": [
        {
          "id": "main-pane-row",
          "type": "horizontal-split",
          "role": "primary-workspace",
          "children": [
            {
              "id": "tree-pane",
              "type": "frame",
              "role": "future-tree-view",
              "initial_width": 200,
              "contents": [
                {
                  "type": "label",
                  "text": "Tree (placeholder)"
                }
              ]
            },
            {
              "id": "canvas-pane",
              "type": "canvas-container",
              "role": "world-canvas",
              "expand": true,
              "contents": [
                {
                  "type": "canvas",
                  "scrollable": true,
                  "background": "#dddddd"
                }
              ]
            },
            {
              "id": "inspector-pane",
              "type": "frame",
              "role": "future-inspector",
              "initial_width": 250,
              "contents": [
                {
                  "type": "label",
                  "text": "Inspector (placeholder)"
                }
              ]
            }
          ]
        },
        {
          "id": "status-bar",
          "type": "status-bar",
          "role": "system-messages",
          "height": "auto",
          "properties": {
            "supports_colors": [
              "foreground",
              "error",
              "success",
              "info"
            ],
            "default_color": "foreground",
            "color_semantics": {
              "foreground": "High-contrast text color relative to current background (white-on-dark, black-on-light)",
              "error": "Error or failure indication (red)",
              "success": "Success or confirmation indication (green)",
              "info": "Informational or neutral emphasis (blue)"
            }
          },
          "contents": [
            {
              "type": "label",
              "text": "Ready."
            }
          ]
        },
        {
          "id": "button-bar",
          "type": "button-bar",
          "role": "command-dock",
          "height": "auto",
          "contents": [
            {
              "type": "button",
              "id": "open-console",
              "label": "Console",
              "action": "open-console-window"
            }
          ]
        }
      ]
    },
    "auxiliary-windows": {
      "console-window": {
        "type": "toplevel",
        "title": "Patchboard Atlas Console",
        "role": "interactive-console",
        "layout": {
          "type": "vertical-stack",
          "children": [
            {
              "type": "text",
              "id": "console-output",
              "expand": true,
              "readonly": false
            },
            {
              "type": "entry",
              "id": "console-input",
              "role": "command-entry"
            }
          ]
        }
      }
    },
    "lifecycle-contract": {
      "entry": {
        "description": "Create Tk root, construct GUI scaffold, and return control to mainloop."
      },
      "exit": {
        "description": "Destroy all toplevel windows and cleanly tear down the GUI."
      },
      "constraints": [
        "Exactly one Tk mainloop per process",
        "All widgets created during entry must be destroyed during exit",
        "No application logic executed during declaration phase"
      ]
    }
  }
}
